{
  "name": "mongars-mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-native start --reset-cache",
    "ios": "RCT_NEW_ARCH_ENABLED=1 arch -x86_64 xcrun simctl list && react-native run-ios --scheme MonGARSMobile",
    "android": "ORG_GRADLE_PROJECT_newArchEnabled=true react-native run-android",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .ts,.tsx src",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "pod-install": "cd ios && RCT_NEW_ARCH_ENABLED=1 bundle exec pod install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-native-community/netinfo": "^11.2.1",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "@shopify/flash-list": "^1.6.3",
    "axios": "^1.7.4",
    "date-fns": "^3.6.0",
    "immer": "^10.1.1",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-config": "^1.5.0",
    "react-native-gesture-handler": "^2.17.1",
    "react-native-permissions": "^4.1.5",
    "react-native-reanimated": "^3.10.1",
    "react-native-safe-area-context": "^4.10.0",
    "react-native-screens": "^3.31.1",
    "react-native-svg": "^15.2.0",
    "react-native-sound": "^0.11.2",
    "react-native-vector-icons": "^10.1.0",
    "zustand": "^4.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/runtime": "^7.24.7",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native/eslint-config": "^0.74.0",
    "@react-native/metro-config": "^0.77.0",
    "@react-native/typescript-config": "^0.74.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/react": "18.3.3",
    "@types/react-native": "0.73.0",
    "@types/react-native-vector-icons": "^6.4.12",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-jest": "^29.7.0",
    "@babel/plugin-transform-private-methods": "^7.24.7",
    "@babel/plugin-transform-private-property-in-object": "^7.24.7",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.3",
    "react-native-svg-transformer": "^1.3.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|@react-navigation/native-stack|@react-native-async-storage|@shopify/flash-list|react-native-permissions|react-native-sound|react-native-reanimated|react-native-gesture-handler|react-native-safe-area-context|react-native-vector-icons|immer)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
